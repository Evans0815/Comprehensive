<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.evans.springbatch.mapper.OriginTransactionMapper">

    <resultMap id="beans" type="OriginTransaction">
        <id property="transId" column="trans_id" />
        <result property="orderNo" column="order_no" />
        <result property="amount" column="amount" />
        <result property="transTime" column="trans_time" />
        <result property="syncFlag" column="sync_flag" />
    </resultMap>

    <select id="queryTrans" resultMap="beans">
        SELECT *
        FROM origin_transaction
        WHERE sync_flag = 0
    </select>

    <insert id="batchInsert">
        INSERT INTO origin_transaction(order_no, amount, trans_time)
        VALUES
            <foreach collection="list" item="trans" separator=",">
                (#{trans.orderNo}, #{trans.amount}, #{trans.transTime})
            </foreach>
    </insert>

</mapper>